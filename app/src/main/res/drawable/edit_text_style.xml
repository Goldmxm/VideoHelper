<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <corners
                android:radius="4dip" />
            <stroke
                android:width="2dp"
                android:color="@color/mz_theme_color_limegreen" />

            <padding
                android:left="3dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="4dp" />
        </shape>


    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="4dip" />
            <stroke
                android:width="2dp"
                android:color="@color/mz_theme_color_limegreen" />
            <padding
                android:left="3dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="4dp" />
        </shape>

    </item>

</selector>