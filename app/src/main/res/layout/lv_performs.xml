<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/actionBarItemBackground"
    android:theme="@android:style/Theme.Translucent">

    <RelativeLayout
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/performs_video_background_color">

        <ImageView
            android:id="@+id/img_performs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_app" />

        <TextView
            android:id="@+id/item_app_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="@string/performs_apptype"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/item_app_type"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:textColor="#FFFFFF"
                android:text="@string/performs_description"
                android:textSize="12dp"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_case_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/performs_video_background_bottom_color"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:gravity="center_vertical"
        android:textColor="#888888"
        android:textSize="11dp"
        android:ellipsize="end"
        android:singleLine="true"/>

</LinearLayout>